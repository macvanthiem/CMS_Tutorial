<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">All Categories</h1>
</div>
<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="category-list">
                {{#each cats }}
                    <tr>
                        <td id="title{{_id}}">{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <button onClick="show('{{_id}}', '{{title}}')" class="btn btn-sm btn-success mr-2"><i class="fa fa-fw fa-edit"></i></button>
                            <form action="/admin/categories/delete/{{_id}}?newMethod=DELETE" method="post">
                                <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-fw fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    
    <div class="col-md-4">
         <form action="" method="post">
            <div class="form-group">
                <label class="h4 text-muted" for="title">Create New Title:</label>
                <input type="text" class="form-control" id="category-title" placeholder="Enter the title ..." name="title" required>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div>
                <button class="btn btn-outline-success btn-block" id="create-category-btn">Create Category</button>
            </div>
        </form>
        <div class="mt-3">
            <div id="create-success-category" class="alert alert-success alert-dismissible fade" role="alert">
                Category created successfully.
            </div>
            <div id="create-fail-category" class="alert alert-danger alert-dismissible fade" role="alert">
                Category created failly.
            </div>
            <div id="update-success-category" class="alert alert-success alert-dismissible fade" role="alert">
                Category updated successfully.
            </div>
            <div id="update-fail-category" class="alert alert-danger alert-dismissible fade" role="alert">
                Category updated failly.
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal">
    <div class="modal-content1">
        <div class="form-group">
            <label class="h4 text-muted" for="title">Update Category:</label>
            <input type="text" style="display: none;" id="category-id">
            <input type="text" class="form-control" id="category-title-update" placeholder="Enter the title ..." name="title" required>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="d-flex justify-content-end">
            <button onclick="cancle()" class="btn btn-secondary mr-3">Cancle</button>
            <button onclick="update_category()" id="update-category" class="btn btn-info">Update</button>
        </div>
    </div>
</div>