<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Create a new post</h1>
</div>
<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="h5 text-muted" for="title">Title:</label>
        <input type="text" class="form-control" id="title" placeholder="Enter the title ..." name="title" required>
        <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                <label class="h5 text-muted" for="banner">Banner image:</label>
                <input type="file" id="banner" name="banner" class="form-control" style="padding: 4px 0; height: auto;" accept="image/*" onchange="imageUpload()">
                <input type="text" name="checkUpload" style="display: none;" value="1" id="checkUpload">
            </div>
            <div class="form-group">
                <label class="h5 text-muted" for="status">Status:</label>
                <select class="form-control" id="status" name="status">
                    <option value="Public">Public</option>
                    <option value="Private">Private</option>
                    <option value="Draft">Draft</option>
                </select>
            </div>
            <div class="form-group">
                <label class="h5 text-muted" for="category">Category:</label>
                <select class="form-control" id="category" name="category">
                    {{#each cats}}
                        <option value="{{_id}}">{{title}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="allow_comments" name="allow_comments" checked>
                <label class="custom-control-label h5 text-muted" for="allow_comments">Allow Comments</label>
            </div>
        </div>
        <div class="col-md-5">
             <div class="mt-3 mb-3">
                <img src="http://placehold.it/758x380" width="100%" alt="" id="displayImage">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="h5 text-muted" for="description">Description:</label>
        <textarea class="form-control" id="description" name="description" rows="2" placeholder="Enter the description ..." required></textarea>
    </div>
    <div class="form-group">
        <label class="h5 text-muted" for="markdown">Content (edit by Markdown):</label>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <textarea onkeyup="preview()" class="form-control" id="markdown" name="markdown" rows="20" placeholder="Enter the content ..." required></textarea>
            </div>
        </div>
        <div class="col-md-6">
            <div style="width: 100%; height: 493px; overflow: auto;" class="border border-success" id="preview">

            </div>
        </div>
    </div>
    
    <div class="text-center mt-3 mb-3">
        <button class="btn btn-outline-success btn-lg">Create Post</button>
    </div>
</form>