<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Update post</h1>
</div>
<form action="/admin/posts/update/{{post._id}}" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="h4 text-muted" for="title">Title:</label>
        <input type="text" class="form-control" id="title" placeholder="Enter the title ..." name="title" required value="{{post.title}}">
        <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                <label class="h5 text-muted" for="banner">Banner image:</label>
                <input type="file" id="banner" name="banner" class="form-control" style="padding: 4px 0; height: auto;" accept="image/*" onchange="imageUpload()">
                <input type="text" name="checkUpload" style="display: none;" value="1" id="checkUpload">
            </div>
            <div class="form-group">
                <label class="h4 text-muted" for="status">Status:</label>
                <select class="form-control" id="status" name="status">
                    <option value="{{post.status}}">{{post.status}}</option>
                    <option value="Public">Public</option>
                    <option value="Private">Private</option>
                    <option value="Draft">Draft</option>
                </select>
            </div>
            <div class="form-group">
                <label class="h4 text-muted" for="category">Category:</label>
                <select class="form-control" id="category" name="category">
                    <option value="{{post.category._id}}">{{post.category.title}}</option>
                    {{#each cats}}
                        <option value="{{_id}}">{{title}}</option>
                    {{/each}}
                </select>
            </div>
            {{#if post.allow_comments}}
                <div class="form-group custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="allow_comments" name="allow_comments" checked>
                    <label class="custom-control-label h5 text-muted" for="allow_comments">Allow Comments</label>
                </div>
            {{else}}
                <div class="form-group custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="allow_comments" name="allow_comments">
                    <label class="custom-control-label h5 text-muted" for="allow_comments">Allow Comments</label>
                </div>
            {{/if}}
        </div>
        <div class="col-md-5 text-center">
            <img src="{{post.banner}}" alt="" height="300px" id="displayImage">
        </div>
    </div>
    <div class="form-group">
        <label class="h4 text-muted" for="description">Description:</label>
        <textarea class="form-control", id="description" name="description" rows="3" placeholder="Enter the description ..." required>{{post.desc}}</textarea>
    </div>
    <div class="form-group">
        <label class="h4 text-muted" for="content">Content:</label>
        <textarea class="form-control", id="content" name="content" rows="10" placeholder="Enter your content here..." required>{{post.content}}</textarea>
    </div>
    <div class="text-center">
        <button class="btn btn-outline-warning btn-lg">Update Now</button>
    </div>
</form>
