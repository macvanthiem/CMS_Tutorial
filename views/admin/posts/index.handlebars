<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">All Posts</h1>
</div>
<table class="table table-striped  table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Created_by</th>
            <th scope="col">Allow Comment</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts }}
            <tr>
                <td>{{title}}</td>
                <td>{{category.title}}</td>
                <td>{{user.first_name}} {{user.last_name}}</td>
                <td>{{allow_comments}}</td>
                <td>{{status}}</td>
                <td class="d-flex">
                    <a href="/admin/posts/show/{{_id}}" class="btn btn-sm btn-info mr-2"><i class="fa fa-fw fa-eye"></i></a>
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-success mr-2"><i class="fa fa-fw fa-edit"></i></a>
                    <form action="/admin/posts/delete/{{_id}}?newMethod=DELETE" method="post" onsubmit=" return confirmDelete()">
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-fw fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
