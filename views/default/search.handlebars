<div class="row">

    <div class="col-md-8 my-4">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                    <li class="breadcrumb-item" aria-current="page"><a href="/news/1">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Search "{{content}}"</li>
            </ol>
        </nav>
        {{#if has_result}}
            {{#each posts}}
                <div class="card mb-4">
                    <div class="row">
                        <div class="col-md-5">
                            <img src="{{banner}}" alt="Card image cap" class="card-img-top">
                        </div>
                        <div class="col-md-7">
                            <h3 class="card-title my-2">{{title}}</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <p><span class="badge badge-success">{{category.title}}</span></p>
                        <p class="card-text">{{desc}}</p>
                        <a href="/posts/{{slug}}" class="btn btn-info">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on {{created_at}} by
                        <a href="">{{user.first_name}} {{user.last_name}}</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <h2><i>No result . . .</i></h2>
        {{/if}}
    </div>

    <div class="col-md-4">
        {{#if user}}
            <div class="card my-4">
                <h5 class="card-header">Profile</h5>
                <div class="card-body row">
                    <div class="col-md-4">
                        <img src="/img/img_avatar1.png" width="100%" class="rounded-circle" alt="">
                    </div>
                    <div class="col-md-8">
                        <h5>{{name}}</h5>
                        <p>{{email}}</p>
                        {{#if role}}
                            <a href="/admin"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{/if}}
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <form action="/search" method="post">
                    <div class="input-group position-relative">
                        <input type="text" class="form-control" name="search" id="search" onkeyup="liveSearch()" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="submit">Go!</button>
                        </span>
                        <div class="position-absolute result-search" id="result-search">
                        
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            {{#each cats}}
                                <li class="mb-3">
                                    <a href="/search/{{_id}}">{{title}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>